<div class="page">
   <div class="page_content">
      <header class="page_block">
        <div class="header ">
          <div class="">
            {{> logo}}
          </div>

          <nav class="header-nav">
              <div class="header_nav_right">
                {{>nav list=header}}
              </div>
          </nav>
       </div>
      </header>

      <section class="page_block">
        <div class="hero">
           {{>hero title=hero.title text=hero.text}}
           {{#with hero}}
               <a class="button" href="{{button.url}}">{{button.text}}</a>
           {{/with}}
        </div>  
      </section>

      <section class="page-block">
         <div class="flex-container">
           {{#each preview}}
          <div class="flex-item">
              {{> cardPreview data=this}}
          </div>
           {{/each}}
         </div>
      </section>

      <main class="page-block">
      <div class="main">
        <div class="row g-0">
          <div class="col-12">
        <div class="list-header">
        
          <div class="">
              <h2 class="list-title">List of posts</h2>
          </div>
          <div class="">
            <div class="category-list">
               {{#each categories}}
                <button class="category-button">{{text}}</button>
               {{/each}}
            </div>
          </div>
 
          </div>
          </div>

          <div class="col-7"> 
            <div class="list">
              {{#each news}}
                 {{> cardPost data=this}}
              {{/each}}
            </div>
          </div>

          <div class="col-5">
            <aside class="list-aside">
              <div class="about">
                <h4 class="about-title">About</h4>
                 <p class="about-text">{{about}}</p>
              </div>
              {{> linkList data=archive title="Archives"}}

              {{> linkList data=social title="Social"}}
            </aside>
          </div>  

          </div> 
         </div>
        </main>

        <footer class="page_block">
        <div class="footer">
         <div class="">
            {{> logo}}
            <span class="footer_copyright">Copyright 2023-2024</span>
          </div>
          {{#each footer}}
            <div class="">
               <span class="footer_title">{{title}}</span>
                {{>nav list=links isVertical=true}}
            </div>
          {{/each}}
        </div>
      </footer>
      </div>
   </div>
</div>