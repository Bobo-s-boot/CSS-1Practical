         <header class="header row g-0">
          <div class="col-3">
            {{> logo}}
          </div>

          <nav class="header-nav col-9">
              <div class="header_nav_right">
                {{>nav list=header}}
              </div>
          </nav>
       </header>
     

      {{#with main}}     
        <div class="main">
          <div class="content-main">
            <h1 class="main-title">{{heading}}</h1>
            <p class="main-text">{{descriotion}}</p>
            <a href="{{href}}"><button class="btn-main">{{button}}</button></a>
          </div>
          <img src="{{image}}" alt="Main image"  class="main-image">   
        </div>
      {{/with}}  

      <main class="block">
        {{#each featured}}
             <div class="card">
              <img src="{{photo}}">
              <h2 class="card-title">{{heading}}</h2>
              <p class="card-text">{{info}}</p>
              <a class="link-block" href="{{linkUrl}}">{{linkText}}</a>
             </div>
        {{/each}}
      </main>

         <div class="form">
          {{#each actions}}
            <div class="card-form">
              <h3 class="form-title">{{heading}}</h3>
              <a class="link-button" href="{{url}}"><button class="form-button">{{text}}</button></a>
            </div>
          {{/each}}
         </div>

        <footer class="row g-0 footer">
         <div class="col-3">
            {{> logo}}
            <span class="footer_copyright">Â© 2023</span>
          </div>
          {{#each footer}}
            <div class="col-3">
               <span class="footer_title">{{title}}</span>
                {{>nav list=links isVertical=true}}
            </div>
          {{/each}}
        </footer>
    
  
