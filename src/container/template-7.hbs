<meta name='Bobo' lang='ENG' content='CSS-PRACTIC-7' />

<head>
<header class='header-logo'>
  <div class='header-log'>
    <span class='lf'>Logo</span>
  </div>
 
 {{#with header}}
 <nav class='header-nav'>
    <div class='header-nav-right'>
      <div class="nav {{#if isVertical}}nav_vertical{{else}}nav_inline{{/if}}">
       {{#each links}}
          <a  class="nav-text" href="{{url}}">{{text}}</a>
       {{/each}}
      </div>
    </div>
  </nav>
  {{/with}}

</header>

<div class='header-logo-2'>
  <a href='www.example.com' class='ff'>Ad</a>
  <p class='header-logo-text'>{{header.ad.text}}</p>
  <div class="user">
    <p class='users'>{{header.userOnline}}</p>
  </div>
</div>
</head>

<body>
    <div class="card-hero">
      {{#with hero}}
        <h1 class="hero-title">{{title}}</h1>
        <p class="hero-text">{{description}}</p>
        {{#with button}}
          <a class="hero-url" href="{{url}}"><button class="btn-hero">{{text}}</button></a>
        {{/with}}
      {{/with}}
    </div>

    <div class="card-about">
      {{#with about}}
        <h2 class="about-title">{{heading}}</h2>
        <p class="about-text">{{info}}</p>
      {{/with}}
    </div>

    <div class="line-articles">
      <h3 class="title-articles">Our Articles</h3>
      <a class="link-articles" href="#"><button class="btn-articless">View All</button></a>
    </div>

    <div class="articles">
      {{#each articles}}
       <div class="articles-card">
        <img class="img-articles" id="{{id}}" src="{{photo}}">
        <h4 class="name-articles">{{name}}</h4>
        <p class="text-articles">{{description}}</p>
        {{#if isNew}}
          <span class="new">New!</span>
        {{/if}}
        <a class="link-articles" href="#"><button class="btn-articles">Read All</button></a>
       </div>
      {{/each}}
    </div>
</body>

<footer>
  {{#with footer}}
    <span class="footer-copyright">{{copyright}}</span>
    {{#each pages}}
        <nav class="footer-nav">
          <a class="nav-footer" href="{{path}}">{{name}}</a>
        </nav>
    {{/each}}
  {{/with}}
</footer>